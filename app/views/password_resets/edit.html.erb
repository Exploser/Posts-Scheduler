<h1>Reset your Password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |password_reset_form| %>
    <% if password_reset_form.object.errors.any? %>
        <div class="alert alert-danger">
            <% password_reset_form.object.errors.full_messages.each do |message| %>
                <div> <%= message %></div>
            <% end %>
        </div>
    <% end %>

    <div class="mb-3">
        <%= password_reset_form.label :password %>
        <%= password_reset_form.password_field :password, class: "form-control", placeholder: "Super Secret!" %>
    </div>
    
    <div class="mb-3">
        <%= password_reset_form.label :password_confirmation %>
        <%= password_reset_form.password_field :password_confirmation, class: "form-control", placeholder: "Super Secret!" %>
    </div>
    
    <div class="mb-3">
        <%= password_reset_form.submit "Reset", class: "btn btn-primary"%>
    </div>
<% end %>